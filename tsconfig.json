{
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022"],
        "moduleResolution": "node16",
        "typeRoots": ["node_modules/@types"],
        "outDir": "dist",
        "skipLibCheck": true
    }
}